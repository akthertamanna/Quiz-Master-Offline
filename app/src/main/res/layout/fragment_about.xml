<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:background="@color/app_background"
    tools:context=".fragment.AboutFragment">


    <LinearLayout
        android:paddingBottom="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="textStart"
            android:text="@string/about_quiz_master_app"
            android:textSize="@dimen/commonTitle"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:textAllCaps="false"
            android:id="@+id/clickContactID"
            android:text="@string/contact_us"
            android:textSize="@dimen/aboutButton"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_baseline_contact_page_24"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="@dimen/aboutButton"
            android:textAllCaps="false"
            android:id="@+id/clickAboutID"
            android:text="@string/about_us"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/about_us_white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="@dimen/aboutButton"
            android:textAllCaps="false"
            android:id="@+id/clickPrivacyID"
            android:text="@string/privacy_policy"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/privacy_tip_white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="@dimen/aboutButton"
            android:textAllCaps="false"
            android:id="@+id/clickTermConditionID"
            android:text="@string/term_amp_conditions"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/privacy_tip_white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="@dimen/aboutButton"
            android:textAllCaps="false"
            android:id="@+id/clickRateID"
            android:text="@string/rate_us"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/star_rate_24_white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="@dimen/aboutButton"
            android:id="@+id/clickShareID"
            android:text="@string/share_app"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/share_white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</ScrollView>